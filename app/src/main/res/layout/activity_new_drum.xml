<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_drum"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sg.edu.nus.guitardrum.NewDrumActivity">

    <com.skyfishjy.library.RippleBackground
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/drum_ripple_bg_1"
        app:rb_color="@color/colorDrumButton1"
        app:rb_radius="50dp"
        app:rb_rippleAmount="1"
        app:rb_duration="1500"
        app:rb_scale="8">
    </com.skyfishjy.library.RippleBackground>

    <com.skyfishjy.library.RippleBackground
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/drum_ripple_bg_2"
        app:rb_color="@color/colorDrumButton2"
        app:rb_radius="50dp"
        app:rb_rippleAmount="1"
        app:rb_duration="1500"
        app:rb_scale="8">
    </com.skyfishjy.library.RippleBackground>

    <com.skyfishjy.library.RippleBackground
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/drum_ripple_bg_3"
        app:rb_color="@color/colorDrumButton3"
        app:rb_radius="50dp"
        app:rb_rippleAmount="1"
        app:rb_duration="1500"
        app:rb_scale="8">
    </com.skyfishjy.library.RippleBackground>

    <com.skyfishjy.library.RippleBackground
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/drum_ripple_bg_4"
        app:rb_color="@color/colorDrumButton4"
        app:rb_radius="50dp"
        app:rb_rippleAmount="1"
        app:rb_duration="1500"
        app:rb_scale="8">
    </com.skyfishjy.library.RippleBackground>

    <com.skyfishjy.library.RippleBackground
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/drum_ripple_bg_5"
        app:rb_color="@color/colorDrumButton5"
        app:rb_radius="50dp"
        app:rb_rippleAmount="1"
        app:rb_duration="1500"
        app:rb_scale="8">
    </com.skyfishjy.library.RippleBackground>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="70dp"
        android:id="@+id/frameLayout4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="3"
            android:elevation="16dp"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            android:id="@+id/drum_button_3"
            app:backgroundTint="@color/colorDrumButton3"/>
    </FrameLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="70dp"
        android:id="@+id/frameLayout3">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            android:id="@+id/drum_button_1"
            app:backgroundTint="@color/colorDrumButton1"
            fabSize="normal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1"
            android:elevation="16dp"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="220dp"
        android:id="@+id/frameLayout5">
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            android:id="@+id/drum_button_2"
            app:backgroundTint="@color/colorDrumButton2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="2"
            android:elevation="16dp"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="220dp"
        android:id="@+id/frameLayout6">
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            android:id="@+id/drum_button_4"
            app:backgroundTint="@color/colorDrumButton4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="4"
            android:elevation="16dp"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </FrameLayout>

    <com.skyfishjy.library.RippleBackground
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/drum_ripple_bg_6"
        app:rb_color="@color/colorDrumButton6"
        app:rb_radius="50dp"
        app:rb_rippleAmount="1"
        app:rb_duration="1500"
        app:rb_scale="8"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
        android:text="Hihat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="102dp"
        android:id="@+id/textView_hihat"
        android:textAlignment="center"
        android:textStyle="normal|bold"/>

        <TextView
            android:text="Snare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="222dp"
            android:layout_marginStart="222dp"
            android:layout_marginTop="102dp"
            android:id="@+id/textView_snare"
            android:textAlignment="center"
            android:textStyle="normal|bold"/>

        <TextView
            android:text="Kick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="75dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="310dp"
            android:id="@+id/textView_kick"
            android:textAlignment="center"
            android:textStyle="normal|bold"/>

        <TextView
            android:text="Crash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="220dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="310dp"
            android:id="@+id/textView_crash"
            android:textAlignment="center"
            android:textStyle="normal|bold"/>
    </com.skyfishjy.library.RippleBackground>


</RelativeLayout>
